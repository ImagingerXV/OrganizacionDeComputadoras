section .data
    msg db "Resultado: ", 0
    len equ $ - msg

    newline db 10, 0
    lenNL equ $ - newline
    
    err_msg db "Error: No se puede dividir entre cero.", 10, 0
    lenErr equ $ - err_msg

section .bss
    resultado resb 1

section .text
    global _start

_start:
 
    mov al, '8'     
    sub al, '0'     

    mov bl, '0'     
    sub bl, '0'

    cmp bl, 0         
    je error_div_cero ; 

  
    xor ah, ah        
    div bl            
    add al, '0'
    mov [resultado], al
    mov eax, 4
    mov ebx, 1
    mov ecx, msg
    mov edx, len
    int 0x80
    mov eax, 4
    mov ebx, 1
    mov ecx, resultado
    mov edx, 1
    int 0x80
    mov eax, 4
    mov ebx, 1
    mov ecx, newline
    mov edx, lenNL
    int 0x80
